<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <item name="scrolling_background_view" type="id"/>
    <item name="recycler_text" type="id"/>

    <style name="ScrollingBackgroundViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:id">@id/scrolling_background_view</item>
    </style>

    <style name="SpaceExplorerDirectionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dip</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:background">@drawable/bg_space_explorer_direction_button</item>
    </style>

</resources>
